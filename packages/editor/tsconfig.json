{
  "extends": "@serlo/typescript-config/base.json",
  "compilerOptions": {
    "rootDir": "../..",
    "paths": {
      "@editor/*": ["./src/*"]
    },
    "outDir": "dist",
    "module": "ES2022",
    "moduleResolution": "bundler"
  },
  "include": [
    "./package.json",
    "./custom.d.ts",
    "./global.ts",
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.tsx",
    "__tests__/**/*.ts",
    "__tests__/**/*.tsx"
  ],
  "exclude": ["node_modules", "dist"]
}
