{
  "extends": "@serlo/typescript-config/base.json",
  "compilerOptions": {
    "rootDir": "../..",
    "paths": {
      "@/*": ["../../apps/web/src/*"],
      "@editor/*": ["./src/*"]
    },
    "outDir": "dist",
    "module": "ES2022",
    "moduleResolution": "bundler"
  },
  "include": [
    "./package.json",
    "./custom.d.ts",
    "./global.ts",
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.tsx",
    "__tests__/**/*.ts",
    "__tests__/**/*.tsx",
    "../../apps/web/src/data/old_comment_ids.json",
    "../../apps/web/**/*ts",
    "../../apps/web/**/*tsx"
  ],
  "exclude": ["node_modules", "dist"]
}
