{
  "extends": "@serlo/typescript-config/base.json",
  "compilerOptions": {
    "rootDir": "../..",
    "paths": {
      "@/*": ["../../apps/web/src/*"],
      "@editor/*": ["./src/*"]
    },
    "outDir": "dist",
    "module": "ESNext",
    "moduleResolution": "bundler"
  },
  "include": [
    "./custom.d.ts",
    "./global.ts",
    "src/**/*.ts",
    "src/**/*.tsx",
    "../../apps/web/src/data/old_comment_ids.json",
    "../../apps/web/**/*ts",
    "../../apps/web/**/*tsx"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "../../apps/web/src/pages/*tsx",
    "../../apps/web/src/pages/*ts"
  ]
}
